{
  "name": "search",
  "version": "1.0.0",
  "description": "Command Line Application for Search",
  "main": "./lib/index.js",
  "bin": {
    "search": "./lib/index.js"
  },
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run bootstrap",
    "build": "tsc -p .",
    "bootstrap": "sudo npm i -g && search",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "jest --verbose --detectOpenHandles --colors --coverage --watch"
  },
  "dependencies": {
    "@types/jest": "^25.1.4",
    "clear": "^0.1.0",
    "figlet": "^1.5.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/clear": "^0.1.1",
    "@types/figlet": "^1.5.1",
    "@types/node": "^13.9.5",
    "jest": "^25.2.3",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
